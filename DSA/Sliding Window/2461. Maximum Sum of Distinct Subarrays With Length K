class Solution {
    public long maximumSubarraySum(int[] nums, int k) {
        Map<Integer, Integer> map = new HashMap<>();
        int dup = 0;
        long max = 0;
        long sum = 0;

        // First window
        for (int i = 0; i < k; i++) {
            map.put(nums[i], map.getOrDefault(nums[i], 0) + 1);
            sum += nums[i];
            if (map.get(nums[i]) == 2) {
                dup++;
            }
        }

        if (dup == 0) {
            max = sum;
        }

        // Sliding window
        for (int j = k; j < nums.length; j++) {
            // Add new element
            map.put(nums[j], map.getOrDefault(nums[j], 0) + 1);
            sum += nums[j];
            if (map.get(nums[j]) == 2) {
                dup++;
            }

            // Remove old element
            int out = nums[j - k];
            map.put(out, map.get(out) - 1);
            sum -= out;
            if (map.get(out) == 1) {
                dup--;
            }

            if (dup == 0) {
                max = Math.max(max, sum);
            }
        }

        return max;
    }
}
