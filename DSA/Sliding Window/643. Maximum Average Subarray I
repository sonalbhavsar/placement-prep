class Solution {
    public double findMaxAverage(int[] nums, int k) {
 
        int sum = 0;
        int i=0;

        for( i =0;i<k;i++){
            sum = sum+nums[i];
        }

         int max = sum;

        int j =k;
        while(j<nums.length){
            sum= sum+nums[j]-nums[j-k];
            max= Math.max(max,sum);
            j++;
        }

        return (double) max/k; 
    }
}
